<Application x:Class="CardDesigner.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CardDesigner.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--  Styles  -->
                <ResourceDictionary Source="Styles/Colors.xaml" />

                <!--  Styles  -->
                <ResourceDictionary Source="Styles/StaticItemStyles.xaml" />
                <ResourceDictionary Source="Styles/ControlItemStyles.xaml" />
                <ResourceDictionary Source="Styles/ListItemStyles.xaml" />

                <!--  Icons  -->
                <ResourceDictionary Source="Resources/Icons/EditButton.xaml" />
                <ResourceDictionary Source="Resources/Icons/IllusionIcon.xaml" />
                <ResourceDictionary Source="Resources/Icons/NecromancyIcon.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>