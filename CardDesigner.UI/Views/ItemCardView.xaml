<UserControl x:Class="CardDesigner.UI.Views.ItemCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CardDesigner.UI.Controls"
    xmlns:converters="clr-namespace:CardDesigner.UI.Converters"
    xmlns:local="clr-namespace:CardDesigner.UI.Views"
    BorderBrush="{StaticResource WindowBorder}"
    BorderThickness="3,0,0,0">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  header area  -->
        <Border BorderThickness="0,0,0,1">
            <StackPanel>
                <Label
                    Content="{Binding Name}"
                    ContentStringFormat="{}{0}s"
                    FontSize="32" />
                <Label Content="{Binding Description}" />
            </StackPanel>
        </Border>

        <!--  Content Area  -->
        <Grid Grid.Row="1">


            <!--  Content area  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <!--  Card Settings  -->

            <StackPanel Orientation="Vertical">

                <!--  Database control  -->
                <controls:AddEditItem
                    Title="Item Card"
                    AddedItemName="{Binding ItemCardName, Mode=TwoWay}"
                    ItemsSource="{Binding AllItemCards, Mode=TwoWay}"
                    SaveCommand="{Binding CreateItemCardCommand}"
                    SelectedItem="{Binding SelectedItemCard, Mode=TwoWay}"
                    ViewOnly="False" />

                <!--  Name/school/level  -->
                <Border
                    BorderThickness="1"
                    Style="{StaticResource VisibleBorder}">
                    <StackPanel>
                        <Label
                            Margin="5,0"
                            Padding="0"
                            Content="Card name:" />
                        <TextBox
                            Margin="5,0"
                            Text="{Binding SelectedItemCard.Name}" />
                        <Label
                            Margin="5,10,0,0"
                            Padding="0"
                            Content="Item school:" />
                        <ComboBox
                            ItemsSource="{Binding Source={StaticResource ItemTypeEnum}}"
                            SelectedItem="{Binding SelectedItemCard.Type}" />
                        <Label
                            Margin="5,10,0,0"
                            Padding="0"
                            Content="Item Requirements:" />
                        <!--  Level  -->
                        <DockPanel HorizontalAlignment="Stretch">
                            <Label Content="Level: " />
                            <Slider
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                Maximum="20"
                                Minimum="1"
                                Value="{Binding SelectedItemCard.Level}" />
                        </DockPanel>
                    </StackPanel>
                </Border>

                <!--  True/False props  -->
                <Border
                    BorderThickness="1"
                    Style="{StaticResource VisibleBorder}">
                    <StackPanel>
                        <CheckBox
                            Content="Magical"
                            IsChecked="{Binding SelectedItemCard.IsMagical}" />
                        <CheckBox
                            Content="Unidentified"
                            IsChecked="{Binding SelectedItemCard.IsUnidentified}" />
                        <CheckBox
                            Content="Attunement"
                            IsChecked="{Binding SelectedItemCard.RequiresAttunement}" />
                    </StackPanel>
                </Border>

                <!--  advanced properties  -->
                <Border
                    BorderThickness="1"
                    Style="{StaticResource VisibleBorder}">
                    <StackPanel>

                        <!--<controls:SliderControl
                            Title="Range:"
                            SelectedValueType="{Binding SelectedItemCard.RangeType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource RangeTypeEnum}}"
                            Value="{Binding SelectedItemCard.RangeValue, Mode=TwoWay}" />

                        <controls:SliderControl
                            Title="Duration:"
                            SelectedValueType="{Binding SelectedItemCard.DurationType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource DurationTypeEnum}}"
                            Value="{Binding SelectedItemCard.DurationValue, Mode=TwoWay}" />

                        <controls:SliderControl
                            Title="Casting time:"
                            SelectedValueType="{Binding SelectedItemCard.CastingTimeType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource CastingTimeEnum}}"
                            Value="{Binding SelectedItemCard.CastingTimeValue, Mode=TwoWay}" />

                        <controls:SliderControl
                            Title="Area of effect:"
                            SelectedValueType="{Binding SelectedItemCard.AreaOfEffect, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource AreaOfEffectEnum}}"
                            Value="{Binding SelectedItemCard.AreaOfEffectValue, Mode=TwoWay}" />

                        <controls:SliderControl
                            Title="Roll:"
                            SelectedValueType="{Binding SelectedItemCard.DiceType, Mode=TwoWay}"
                            UnitTypes="{Binding Source={StaticResource DamageTypeEnum}}"
                            ValueTypes="{Binding Source={StaticResource DiceTypeEnum}}"
                            Value="{Binding SelectedItemCard.DiceValue, Mode=TwoWay}" />-->

                    </StackPanel>
                </Border>

                <!--  Manually update button  -->
                <Button
                    Command="{Binding UpdateItemCardCommand}"
                    Content="Update" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>