<UserControl x:Class="CardDesigner.UI.Views.CardDecksView" x:Name="deckControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CardDesigner.UI.Controls"
    xmlns:converters="clr-namespace:CardDesigner.UI.Converters"
    xmlns:local="clr-namespace:CardDesigner.UI.Views"
    BorderBrush="{StaticResource WindowBorder}"
    BorderThickness="3,0,0,0">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  header area  -->
        <Border BorderThickness="0,0,0,1">
            <StackPanel>
                <Label
                    Content="{Binding Name}"
                    FontSize="32" />
                <Label Content="{Binding Description}" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Spell decks area  -->
            <StackPanel
                Grid.Row="1"
                Orientation="Vertical">

                <!--  Manage decks  -->
                <controls:AddEditItem
                    Title="Spell Deck"
                    AddedItemName="{Binding AddedSpellDeckName, Mode=TwoWay}"
                    DeleteCommand="{Binding DeleteSpellDeckCommand}"
                    ItemsSource="{Binding AllSpellDecks, Mode=TwoWay}"
                    SaveCommand="{Binding CreateSpellDeckCommand}"
                    SelectedItem="{Binding SelectedSpellDeck, Mode=TwoWay}"
                    ViewOnly="False" />

                <!--  Manage cards in decks  -->
                <Border BorderThickness="1">
                    <Border.Style>
                        <Style BasedOn="{StaticResource VisibleBorder}" TargetType="{x:Type Border}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedSpellDeck}"
                                    Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DataGrid
                            Grid.Column="0"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding AllSpellCards, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Width="*"
                                    Header="All available cards">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.AddSpellCardToDeckCommand, ElementName=deckControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Name}"
                                                Style="{StaticResource CardAssignUnassignButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid
                            Grid.Column="2"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding SelectedSpellDeck.SpellCards, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Width="*"
                                    Header="Cards in deck">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.RemoveSpellCardFromDeckCommand, ElementName=deckControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Name}"
                                                Style="{StaticResource CardAssignUnassignButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>

            <!--  Item decks area  -->
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">

                <!--  Manage decks  -->
                <controls:AddEditItem
                    Title="Item Deck"
                    AddedItemName="{Binding AddedItemDeckName, Mode=TwoWay}"
                    DeleteCommand="{Binding DeleteItemDeckCommand}"
                    ItemsSource="{Binding AllItemDecks, Mode=TwoWay}"
                    SaveCommand="{Binding CreateItemDeckCommand}"
                    SelectedItem="{Binding SelectedItemDeck, Mode=TwoWay}"
                    ViewOnly="False" />

                <!--  Manage item cards in decks  -->
                <Border BorderThickness="1">
                    <Border.Style>
                        <Style BasedOn="{StaticResource VisibleBorder}" TargetType="{x:Type Border}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedItemDeck}"
                                    Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DataGrid
                            Grid.Column="0"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding AllItemCards, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Width="*"
                                    Header="All available cards">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.AddItemCardToDeckCommand, ElementName=deckControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Name}"
                                                Style="{StaticResource CardAssignUnassignButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid
                            Grid.Column="2"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding SelectedItemDeck.ItemCards, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Width="*"
                                    Header="Cards in deck">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.RemoveItemCardFromDeckCommand, ElementName=deckControl}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Name}"
                                                Style="{StaticResource CardAssignUnassignButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
