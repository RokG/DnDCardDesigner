<UserControl x:Class="CardDesigner.UI.Views.SpellCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:enums="clr-namespace:CardDesigner.Domain.Enums;assembly=CardDesigner.Domain"
    xmlns:local="clr-namespace:CardDesigner.UI.Views"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    BorderBrush="{StaticResource BaseBorderBrush}"
    BorderThickness="3,0,0,0">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="EnumDataSource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:MagicSchool" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <Label Content="Item card background" />
            <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="StyleMagicItems" />
                <ComboBoxItem Content="StylePotions" />
                <ComboBoxItem Content="StyleCustomItems1" />
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <Button
                    Grid.Row="2"
                    Command="{Binding DoNavigateCommand, UpdateSourceTrigger=PropertyChanged}"
                    Content="Navigate" />
                <Button
                    Grid.Row="4"
                    Command="{Binding CreateCharacterCommand, UpdateSourceTrigger=PropertyChanged}"
                    Content="Add Character" />
                <Button
                    Grid.Row="4"
                    Command="{Binding CreateSpellDeckCommand, UpdateSourceTrigger=PropertyChanged}"
                    Content="Add SpellDeck" />
                <Button
                    Grid.Row="4"
                    Command="{Binding AddCardCommand, UpdateSourceTrigger=PropertyChanged}"
                    Content="Add SpellCard" />
                <ListBox
                    Name="myComboBox"
                    Grid.Row="3"
                    ItemsSource="{Binding Source={StaticResource EnumDataSource}}"
                    SelectedIndex="0"
                    SelectedItem="{Binding MagicSchoolType}" />
            </StackPanel>

            <StackPanel Grid.Column="1" />
        </Grid>

    </Grid>
</UserControl>