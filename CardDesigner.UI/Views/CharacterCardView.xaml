                        <controls:SliderControl
                            Title="Casting time:"
                            SelectedValueType="{Binding SelectedCharacterCard.CastingTimeType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource CastingTimeEnum}}"
                            Value="{Binding SelectedCharacterCard.CastingTimeValue, Mode=TwoWay}" />
                        <ContentControl>
                            <controls:SliderControl
                                Title="Area of effect:"
                                SelectedValueType="{Binding SelectedCharacterCard.AreaOfEffect, Mode=TwoWay}"
                                ValueTypes="{Binding Source={StaticResource AreaOfEffectEnum}}"
                                Value="{Binding SelectedCharacterCard.AreaOfEffectValue, Mode=TwoWay}" />
                            <ContentControl.Style>
                                <Style TargetType="{x:Type ContentControl}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding SelectedCharacterCard.RangeType}"
                                            Value="{x:Static enums:RangeType.Distance}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>

                        <controls:SliderControl
                            Title="Roll:"
                            SelectedUnitType="{Binding SelectedCharacterCard.DamageType, Mode=TwoWay}"
