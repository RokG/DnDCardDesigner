                        <CheckBox
                            Content="Somatic"
                            IsChecked="{Binding SelectedCharacterCard.HasSomaticComponent}" />
                        <CheckBox
                            Content="Verbal"
                            IsChecked="{Binding SelectedCharacterCard.HasVerbalComponent}" />
                        <CheckBox
                            Content="Material"
                            IsChecked="{Binding SelectedCharacterCard.HasMaterialComponent}" />
                    </StackPanel>
                </Border>-->

                <!--  Advanced properties  -->
                <!--<Border
                    BorderThickness="1"
                    Style="{StaticResource VisibleBorder}">
                    <StackPanel>

                        <controls:SliderControl
                            Title="Range:"
                            SelectedValueType="{Binding SelectedCharacterCard.RangeType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource RangeTypeEnum}}"
                            Value="{Binding SelectedCharacterCard.RangeValue, Mode=TwoWay}" />

                        <controls:SliderControl
                            Title="Duration:"
                            SelectedValueType="{Binding SelectedCharacterCard.DurationType, Mode=TwoWay}"
                            ValueTypes="{Binding Source={StaticResource DurationTypeEnum}}"
