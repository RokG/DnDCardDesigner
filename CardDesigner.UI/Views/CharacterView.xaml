<UserControl x:Class="CardDesigner.UI.Views.CharacterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CardDesigner.UI.Views"
    BorderBrush="{StaticResource BaseBorderBrush}"
    BorderThickness="3,0,0,0">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  header area  -->
        <Border BorderThickness="0,0,0,1">
            <Label
                Content="Character card deck overview"
                FontSize="32" />
        </Border>

        <!--  body area  -->
        <Border Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Character overview  -->
                <StackPanel Orientation="Vertical">
                    <Label Content="Character: " />
                    <ComboBox
                        Height="40"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding AllCharacters}"
                        SelectedItem="{Binding SelectedCharacter}" />

                    <Border BorderThickness="0,0,0,3" />

                    <Label Content="Spell deck: " />
                    <Label Content="{Binding SelectedSpellDeck.Name}" />

                    <Border BorderThickness="0,0,0,3" />

                    <Label Content="Cards in deck : " />
                    <ListBox
                        Grid.Row="2"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding SelectedSpellDeckCards}" />
                </StackPanel>

                <!--  Card overview  -->
                <TabControl Grid.Column="1">
                    <TabItem Header="Card Rear">
                        <StackPanel>
                            <Label Content="Character Cards back side" />
                            <ComboBox SelectedIndex="0">
                                <ComboBoxItem Content="DruidSpells" />
                                <ComboBoxItem Content="WizardSpells" />
                                <ComboBoxItem Content="CustomBackground1" />
                            </ComboBox>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Card Background" />
                    <TabItem Header="Card Face" />
                </TabControl>

            </Grid>
        </Border>
    </Grid>
</UserControl>
