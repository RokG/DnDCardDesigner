<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Color definitions  -->

    <Color x:Key="BaseBackgroundColor">#444444</Color>
    <Color x:Key="BaseControlBackgroundColor">#666666</Color>
    <Color x:Key="BaseHighlightColor">#888888</Color>
    <Color x:Key="BaseForegroundColor">#aaaadd</Color>
    <Color x:Key="BaseDisabledColor">#444466</Color>
    <Color x:Key="BaseForegroundDisabledColor">#222244</Color>
    <Color x:Key="BaseEdgeColor">#8888bb</Color>

    <!--  Color brushes  -->

    <SolidColorBrush x:Key="BaseBackgroundBrush" Color="{StaticResource BaseBackgroundColor}" />
    <SolidColorBrush x:Key="BaseControlBackgroundBrush" Color="{StaticResource BaseControlBackgroundColor}" />
    <SolidColorBrush x:Key="BaseHighlightBrush" Color="{StaticResource BaseHighlightColor}" />
    <SolidColorBrush x:Key="BaseForegroundBrush" Color="{StaticResource BaseForegroundColor}" />
    <SolidColorBrush x:Key="BaseDisabledBrush" Color="{StaticResource BaseDisabledColor}" />
    <SolidColorBrush x:Key="BaseForegroundDisabledBrush" Color="{StaticResource BaseForegroundDisabledColor}" />
    <SolidColorBrush x:Key="BaseEdgeBrush" Color="{StaticResource BaseEdgeColor}" />
</ResourceDictionary>