<Window x:Class="CardDesigner.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CardDesigner.UI"
    xmlns:views="clr-namespace:CardDesigner.UI.Views"
    xmlns:vms="clr-namespace:CardDesigner.UI.ViewModels"
    Title="CardDesigner"
    Width="800"
    Height="450">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:SpellCardViewModel}">
                <views:SpellCardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ItemCardViewModel}">
                <views:ItemCardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CharacterViewModel}">
                <views:CharacterView />
            </DataTemplate>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <!--  SidePanel column  -->
        <Grid
            Grid.Column="0"
            Background="#2F3E46">
            <StackPanel>
                <Button
                    Height="60"
                    Command="{Binding CharacterNavigationCommand}" />
                <Button
                    Height="60"
                    Command="{Binding SpellCardNavigationCommand}" />
                <Button
                    Height="60"
                    Command="{Binding ItemCardNavigationCommand}" />
            </StackPanel>
        </Grid>

        <!--  Main Content column  -->
        <Grid
            Grid.Column="1"
            Background="#2F3E46">

            <ContentPresenter Content="{Binding CurrentViewModel}" />
        </Grid>
    </Grid>
</Window>