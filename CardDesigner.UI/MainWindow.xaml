<Window x:Class="CardDesigner.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CardDesigner.UI"
    xmlns:views="clr-namespace:CardDesigner.UI.Views"
    xmlns:vms="clr-namespace:CardDesigner.UI.ViewModels"
    Title="CardDesigner"
    Width="800"
    Height="450">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:CardCreatorViewModel}">
                <views:CardCreatorView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CardDisplayViewModel}">
                <views:CardDisplayView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>