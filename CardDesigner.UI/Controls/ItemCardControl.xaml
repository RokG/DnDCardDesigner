<UserControl x:Class="CardDesigner.UI.Controls.ItemCardControl" x:Name="itemCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CardDesigner.UI.Controls"
    xmlns:converters="clr-namespace:CardDesigner.UI.Converters"
    xmlns:enums="clr-namespace:CardDesigner.Domain.Enums;assembly=CardDesigner.Domain"
    xmlns:local="clr-namespace:CardDesigner.UI.Controls">
    <Viewbox>
        <Grid>
            <!--  Card border  -->
            <Border
                Width="250"
                Height="350"
                Margin="0"
                Padding="0"
                Background="{StaticResource CardHeaderBackgroundColor}"
                BorderBrush="{StaticResource CardLineColor}"
                BorderThickness="2"
                CornerRadius="4" />
            <!--  Card contents  -->
            <Canvas>

                <!--  Body lines  -->
                <Border
                    Canvas.Top="35"
                    Width="250"
                    Height="250"
                    Margin="0"
                    Padding="0"
                    Background="{StaticResource CardBodyBackgroundColor}"
                    BorderBrush="{StaticResource CardLineColor}"
                    BorderThickness="0,2,0,2" />

                <!--  School icon  -->
                <Label
                    Canvas.Top="35"
                    Content="{Binding ItemCard.Type, ElementName=itemCard}"
                    Opacity=".15"
                    Style="{StaticResource IconLabel}" />

                <!--  Components  -->
                <DockPanel
                    Canvas.Left="2"
                    Canvas.Top="25"
                    Width="248"
                    LastChildFill="False">
                    <!--  Material  -->
                    <!--<Border
                        Width="25"
                        Height="25"
                        Margin="2,0,0,0"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        Visibility="{Binding ItemCard.HasMaterialComponent, ElementName=itemCard, Converter={converters:BoolToVisibilityConverter}}">
                        <Label
                            Content="{StaticResource ComponentMaterial}"
                            Style="{StaticResource IconLabel}" />
                    </Border>-->
                    <!--  Verbal  -->
                    <!--<Border
                        Width="25"
                        Height="25"
                        Margin="2,0,0,0"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        Visibility="{Binding ItemCard.HasVerbalComponent, ElementName=itemCard, Converter={converters:BoolToVisibilityConverter}}">
                        <Label
                            Content="{StaticResource ComponentVerbal}"
                            Style="{StaticResource IconLabel}" />
                    </Border>-->
                    <!--  Somatic  -->
                    <!--<Border
                        Width="25"
                        Height="25"
                        Margin="2,0,0,0"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        Visibility="{Binding ItemCard.HasSomaticComponent, ElementName=itemCard, Converter={converters:BoolToVisibilityConverter}}">
                        <Label
                            Content="{StaticResource ComponentSomatic}"
                            Style="{StaticResource IconLabel}" />
                    </Border>-->
                    <!--  Level  -->
                    <Border
                        Width="25"
                        Height="25"
                        Margin="50,0,4,0"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        DockPanel.Dock="Right">
                        <Label
                            Margin="0"
                            Padding="5,0"
                            Background="Transparent"
                            Content="{Binding ItemCard.Level, ElementName=itemCard}"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Black"
                            Foreground="Black" />
                    </Border>
                    <!--  Ritual  -->
                    <!--<Border
                        Width="25"
                        Height="25"
                        Margin="10,0,0,0"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        DockPanel.Dock="Right"
                        Visibility="{Binding ItemCard.IsRitual, ElementName=itemCard, Converter={converters:BoolToVisibilityConverter}}">
                        <Label
                            Content="{StaticResource ItemRitual}"
                            Style="{StaticResource IconLabel}" />
                    </Border>-->
                    <!--  Concentration  -->
                    <!--<Border
                        Width="25"
                        Height="25"
                        Background="{StaticResource CardHeaderIconBackgroundColor}"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="20"
                        DockPanel.Dock="Right"
                        Visibility="{Binding ItemCard.IsConcentration, ElementName=itemCard, Converter={converters:BoolToVisibilityConverter}}">
                        <Label
                            Content="{StaticResource ItemConcentration}"
                            Style="{StaticResource IconLabel}" />
                    </Border>-->
                </DockPanel>
                <!--  Title textbox  -->
                <controls:TextBoxWithPlaceholderControl
                    Canvas.Left="2"
                    Width="246"
                    Background="Transparent"
                    FontSize="16"
                    InputText="{Binding ItemCard.Title, ElementName=itemCard, Mode=TwoWay}"
                    IsEnabled="{Binding IsEditable, ElementName=itemCard}" />

                <!--  Description textbox  -->
                <controls:TextBoxWithPlaceholderControl
                    Canvas.Left="2"
                    Canvas.Top="50"
                    Width="246"
                    MaxHeight="300"
                    Background="Transparent"
                    FontSize="14"
                    InputText="{Binding ItemCard.Description, ElementName=itemCard, Mode=TwoWay}"
                    IsEnabled="{Binding IsEditable, ElementName=itemCard}" />

                <!--  Item properties  -->
                <WrapPanel
                    Canvas.Top="285"
                    Width="250"
                    Height="32.5"
                    Margin="0"
                    ItemHeight="30"
                    ItemWidth="60"
                    Orientation="Horizontal">

                    <!--<controls:IconWithPropertyControl
                        Icon="{StaticResource ItemCastingTime}"
                        Unit="{Binding ItemCard.CastingTimeType, ElementName=itemCard, Converter={converters:EnumToPropertyConverter}, ConverterParameter=Unit}"
                        Value="{Binding ItemCard.CastingTimeValue, ElementName=itemCard}" />
                    <controls:IconWithPropertyControl
                        Icon="{StaticResource ItemDuration}"
                        Unit="{Binding ItemCard.DurationType, ElementName=itemCard, Converter={converters:EnumToPropertyConverter}, ConverterParameter=Unit}"
                        Value="{Binding ItemCard.DurationValue, ElementName=itemCard}" />
                    <controls:IconWithPropertyControl
                        Icon="{StaticResource ItemRange}"
                        Unit="{Binding ItemCard.RangeType, ElementName=itemCard, Converter={converters:EnumToPropertyConverter}, ConverterParameter=Unit}"
                        Value="{Binding ItemCard.RangeValue, ElementName=itemCard}" />
                    <controls:IconWithPropertyControl
                        Icon="{StaticResource ItemAOECone}"
                        Unit="{Binding ItemCard.AreaOfEffect, ElementName=itemCard, Converter={converters:EnumToPropertyConverter}, ConverterParameter=Unit}"
                        Value="{Binding ItemCard.AreaOfEffectValue, ElementName=itemCard}" />-->

                </WrapPanel>

                <!--  Target description  -->
                <!--<DockPanel
                    Canvas.Top="315"
                    Width="250"
                    Height="32">
                    <Viewbox
                        Width="30"
                        Height="30">
                        <Label
                            Background="Transparent"
                            Content="{StaticResource ItemTarget}" />
                    </Viewbox>
                -->
                <!--  Title textbox  -->
                <!--
                    <controls:TextBoxWithPlaceholderControl
                        Width="150"
                        Background="Transparent"
                        FontSize="10"
                        InputText="{Binding ItemCard.Target, ElementName=itemCard, Mode=TwoWay}"
                        IsEnabled="{Binding IsEditable, ElementName=itemCard}" />
                    <controls:IconWithPropertyControl
                        Height="30"
                        Icon="{StaticResource RollDice}"
                        Unit="d6"
                        Value="{Binding ItemCard.DiceValue, ElementName=itemCard}" />
                </DockPanel>-->

            </Canvas>
            <!--  Card border  -->
            <Border
                Width="250"
                Height="350"
                Margin="0"
                Padding="0"
                BorderBrush="{StaticResource CardLineColor}"
                BorderThickness="2"
                CornerRadius="4" />
        </Grid>
    </Viewbox>
</UserControl>
