<UserControl x:Class="CardDesigner.UI.Controls.ImageControl" x:Name="imageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CardDesigner.UI.Converters"
    xmlns:local="clr-namespace:CardDesigner.UI.Controls">
    <Viewbox
        ClipToBounds="True"
        Stretch="{Binding ImageStretch, ElementName=imageControl}">
        <Viewbox>
            <Image x:Name="itemImage"
                Source="{Binding ImageSource, ElementName=imageControl}" />
        </Viewbox>
    </Viewbox>
</UserControl>
