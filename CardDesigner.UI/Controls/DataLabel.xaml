<UserControl x:Class="CardDesigner.UI.Controls.DataLabel" x:Name="dataLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CardDesigner.UI.Controls"
    Margin="0"
    Padding="0">
    <StackPanel Orientation="Horizontal">
        <Label
            Margin="{Binding Margin, ElementName=dataLabel}"
            Padding="{Binding Padding, ElementName=dataLabel}"
            Content="{Binding ValueName, ElementName=dataLabel}"
            ContentStringFormat="{}{0}: " />
        <Label
            Margin="{Binding Margin, ElementName=dataLabel}"
            Padding="{Binding Padding, ElementName=dataLabel}"
            Content="{Binding Value1, ElementName=dataLabel}" />
        <Label
            Margin="{Binding Margin, ElementName=dataLabel}"
            Padding="{Binding Padding, ElementName=dataLabel}"
            Content="{Binding Value2, ElementName=dataLabel}" />
        <Label
            Margin="{Binding Margin, ElementName=dataLabel}"
            Padding="{Binding Padding, ElementName=dataLabel}"
            Content="{Binding Value3, ElementName=dataLabel}" />
    </StackPanel>
</UserControl>
